@using PagedList.Mvc
@model  PagedList.IPagedList<Haat_Bazar.Models.Product>
@{
    Layout = null;
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> @TempData["msg"]
    </div>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container" style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                <img src="~/Content/img/Modern-e-Commerce-Web-Design-Trends.-Part-2.gif" style="width:100%; height:100%" />


            </div>

        </div>

        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                <img src="~/Content/upload/Furniture-DT-Fabric-Sofa.jpg" style="width:100%; height:100%" />


            </div>

        </div>

        



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">

                        <img class="img img-responsive cimg" src="@Url.Content(item.ProductImage)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.ProductName </h3>
                        <h5 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">Price: <small>@item.ProductPrice Tk</small> </h5>
                        <h5 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">Discount: <small>@item.Discount %</small> </h5>

                        <h4 style="text-align:center">

                            <a class='btn btn-success btn-sm' href="@Url.Action("EditProduct",new { id=item.ProductId})"> Edit </a>
                        </h4>

                    </div>

                }
            }
        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewProduct", new { page }))
        </div>
    </div>
</body>
</html>