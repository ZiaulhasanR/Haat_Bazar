@model Haat_Bazar.Models.Product
@{
    Layout = null;
}

<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../Content/img/Login-bg.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: whitesmoke;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />





<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div class="col-lg-2 col-md-2 col-sm-2">
        <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-info">@Html.ActionLink("Home", "HomePage", "Admin")</span></h3>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2">
        <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-info">@Html.ActionLink("Admin Panel", "AdminPanel", "Admin")</span></h3>
    </div>
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("AddProduct1",
                        "Admin",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1>Add Product</h1></div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.DropDownListFor(m => m.CatagorieId, ViewBag.catagorylist as SelectList, "select", new { @class = "form-control" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.CatagorieId) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @placeholder = "Product name" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.ProductName) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                        @Html.TextBoxFor(m => m.ProductStock, new { @class = "form-control", @placeholder = "Product Stock" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.ProductStock) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="ProductPrice" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control", @placeholder = "ProductPrice" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.ProductPrice) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="ProductPrice" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(m => m.Discount, new { @class = "form-control", @placeholder = "ProductDiscount" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.Discount) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(m => m.ProductDes, new { @class = "form-control", @placeholder = "ProductDes" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.ProductDes) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />



                    </div>


                </div>



                <div class="form-group">

                    <input type="submit" value="Add" class="btn btn-success btn-block" />

                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

